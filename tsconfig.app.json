{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "noEmit": false,  // Aseg√∫rate que esto sea false
    "emitDeclarationOnly": false,  // Debe ser false para generar JS
    "declaration": true,  // Opcional: si quieres los .d.ts
    "sourceMap": true  // Opcional: para mapas de fuente
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}