{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-tsc",  // Cambiado para evitar conflicto con Vite
    "noEmit": false,
    "emitDeclarationOnly": false,
    "declaration": false,
    "sourceMap": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}